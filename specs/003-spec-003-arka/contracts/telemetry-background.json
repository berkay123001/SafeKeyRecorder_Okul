{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BackgroundTelemetryEnvelope",
  "type": "object",
  "required": [
    "consentDecisionId",
    "mode",
    "events",
    "queuedAtUtc",
    "encryptedPayload"
  ],
  "properties": {
    "consentDecisionId": {
      "type": "string",
      "format": "uuid"
    },
    "mode": {
      "type": "string",
      "enum": ["background"],
      "description": "Only background mode events are queued here"
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "eventId",
          "eventType",
          "capturedAtUtc",
          "queueState"
        ],
        "properties": {
          "eventId": {
            "type": "string",
            "format": "uuid"
          },
          "eventType": {
            "type": "string",
            "enum": [
              "backgroundResume",
              "backgroundPause",
              "backgroundToggleChanged",
              "backgroundConsentRecorded"
            ]
          },
          "capturedAtUtc": {
            "type": "string",
            "format": "date-time"
          },
          "queueState": {
            "type": "string",
            "enum": ["Pending", "Queued", "Flushed"]
          },
          "systemLockState": {
            "type": "string",
            "enum": ["Locked", "Unlocked"],
            "description": "Optional lock state snapshot when event emitted"
          }
        },
        "additionalProperties": false
      }
    },
    "queuedAtUtc": {
      "type": "string",
      "format": "date-time"
    },
    "flushedAtUtc": {
      "type": "string",
      "format": "date-time"
    },
    "encryptedPayload": {
      "type": "string",
      "contentEncoding": "base64",
      "description": "AES-256-GCM ciphertext of event bundle"
    },
    "encryptionNonce": {
      "type": "string",
      "contentEncoding": "base64"
    },
    "signature": {
      "type": "string",
      "contentEncoding": "base64"
    }
  },
  "additionalProperties": false
}
