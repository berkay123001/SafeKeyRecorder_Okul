<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SafeKeyRecorder.ViewModels"
        xmlns:components="clr-namespace:SafeKeyRecorder.Views.Components"
        mc:Ignorable="d"
        d:DesignWidth="900"
        d:DesignHeight="600"
        x:Class="SafeKeyRecorder.MainWindow"
        x:DataType="viewModels:MainWindowViewModel"
        Title="SafeKeyRecorder"
        Focusable="True">
    <Grid RowDefinitions="Auto,Auto,*,Auto"
          ColumnDefinitions="*"
          Margin="16">
        <components:BackgroundStatusBanner Grid.Row="0"
                                           Margin="0,0,0,16"
                                           DataContext="{Binding BackgroundBanner}" />

        <StackPanel Grid.Row="1" Margin="0,0,0,16" Spacing="8">
            <TextBlock Text="{Binding ConsentStatus}" FontSize="18" FontWeight="Bold" />
            <TextBlock Text="{Binding LoggingPathMessage}"
                       IsVisible="{Binding IsLoggingPathVisible}" />
            <TextBlock Text="{Binding PermissionSummary}"
                       IsVisible="{Binding IsPermissionSummaryVisible}" />
            <TextBlock Text="{Binding AccessibilityStatus}" FontStyle="Italic" />
        </StackPanel>

        <Border Grid.Row="2" BorderBrush="#333" BorderThickness="1" CornerRadius="6" Padding="8">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding LogEntries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontFamily="Consolas" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,16,0,0">
            <Button Content="Rıza Al"
                    Command="{Binding StartConsentCommand}" />
            <Button Content="İzin Ayarları"
                    Command="{Binding OpenConsentSettingsCommand}"
                    IsEnabled="{Binding IsPermissionSummaryVisible}" />
            <Button Content="Logu Temizle"
                    Command="{Binding PurgeLogCommand}" />
        </StackPanel>
    </Grid>
</Window>
